<?xml version="1.0"?>
<!-- -->

<robot name="carma_on_ceiling" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="namespace" value="$(arg namespace)"/>

  <!-- add carma -->
  <xacro:property name="carma_namespace" value="${namespace}/carma"/>
  <xacro:include filename="$(find manipulator_tether_lifting)/urdf/carma/base_carma.xacro"/>

  <link name="world">
  </link>

  <joint name="${namespace}/joint_ceiling_world" type="fixed">
     <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="world"/>
      <child link="${namespace}/link_ceiling"/>
  </joint>


  <link name="${namespace}/link_ceiling">
   <inertial>
     <origin xyz="0 0 0" rpy="0 0 0"/>
     <mass value="1"/>
     <inertia ixx="1" ixy="0" ixz="0" 
              iyy="1" iyz="0" 
              izz="1" />
   </inertial>

   <visual>
     <origin xyz="0 0 0" rpy="0 0 0" />
     <geometry>
       <box size="0.5 0.5 0.1" />
     </geometry>
     <material name="Cyan">
       <color rgba="0 1.0 1.0 1.0"/>
     </material>
   </visual>
  </link>

  <joint name="${namespace}/joint_ceiling_link1" type="continuous">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="0 1 0" />
      <parent link="${namespace}/link_ceiling"/>
      <child link="${namespace}/carma/link1"/>
   </joint>

</robot>